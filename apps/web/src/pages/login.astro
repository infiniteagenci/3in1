// Login page with Google OAuth only
import Layout from '../layouts/Layout.astro'
---

<Layout title="Login - 3in1 Catholic Spiritual App">
  <div class="login-bg">
    <!-- Background elements -->
    <div class="login-bg-animation"></div>
    <div class="floating-elements">
      <div class="floating-element"></div>
      <div class="floating-element"></div>
      <div class="floating-element"></div>
      <div class="floating-element"></div>
    </div>

    <!-- Loading state -->
    <div id="loading" class="loading hidden">
      <div class="loading-spinner"></div>
      <span id="loading-text">Authenticating...</span>
    </div>

    <!-- Login container -->
    <div class="login-container">
      <!-- Auth card (when logged out) -->
      <div id="auth-card" class="auth-card hidden">
        <!-- Logo -->
        <div class="auth-logo">
          <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-purple-500 to-blue-500 flex items-center justify-center shadow-lg mx-auto">
            <span class="text-white font-bold text-3xl">3</span>
          </div>
          <h1 class="auth-title">Welcome to 3in1</h1>
          <p class="auth-subtitle">Your spiritual journey begins here</p>
        </div>

        <!-- Language Selector -->
        <div class="auth-language-selector">
          <button id="login-language-btn" class="language-btn">
            <span class="language-icon">üåê</span>
            <span id="login-current-lang">English</span>
