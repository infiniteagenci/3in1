---
// src/pages/login.astro
import Layout from '../layouts/Layout.astro'

// Extract environment variable at build time/server-side
const { PUBLIC_WORKER_API_URL } = import.meta.env;

// Client-side functions will be defined in the script tag
---

<Layout title="Login - 3in1 Spiritual App">
    <div class="login-bg">
      <!-- Background elements -->
      <div class="login-bg-animation"></div>
      <div class="floating-elements">
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
      </div>

      <!-- Loading state -->
      <div id="loading" class="loading">
        <div class="loading-spinner"></div>
        Checking authentication...
      </div>

      <!-- Login container -->
      <div class="login-container">
      <!-- Login form -->
      <div id="login-card" class="login-card hidden">
        <!-- Logo section -->
        <div class="logo-section">
          <div class="logo">3</div>
          <h1 class="app-name">3in1</h1>
          <p class="tagline">Your spiritual companion</p>
          <p class="spirit-name">Meet Spirit</p>
        </div>

        <!-- Welcome section -->
        <div class="welcome-section">
          <h2 class="welcome-title">Find Spiritual Guidance<br>Through Jesus's Teachings</h2>
          <p class="welcome-description">
            Chat with Spirit, an AI guide who understands Jesus's teachings and provides personalized spiritual guidance for your unique journey.
          </p>
        </div>

        <!-- Google login button -->
        <button id="google-login-btn" class="google-btn">
          <svg class="google-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25C22.56 11.47 22.49 10.72 22.36 10H12V14.26H17.92C17.66 15.63 16.88 16.79 15.71 17.57V20.34H19.28C21.36 18.42 22.56 15.6 22.56 12.25Z" fill="#4285F4"/>
            <path d="M12 23C14.97 23 17.46 22.02 19.28 20.34L15.71 17.57C14.73 18.23 13.48 18.64 12 18.64C9.14 18.64 6.73 16.69 5.85 14.09H2.19V16.91C4.04 20.53 7.72 23 12 23Z" fill="#34A853"/>
            <path d="M5.85 14.09C5.62 13.38 5.49 12.63 5.49 11.87C5.49 11.11 5.62 10.36 5.85 9.65V6.83H2.19C1.43 8.28 1 9.96 1 11.87C1 13.78 1.43 15.46 2.19 16.91L5.85 14.09Z" fill="#FBBC05"/>
            <path d="M12 5.38C13.92 5.38 15.61 6.08 16.94 7.45L20.36 3.84C18.22 1.82 15.26 0.5 12 0.5C7.72 0.5 4.04 2.97 2.19 6.59L5.85 9.65C6.73 6.95 9.14 5.38 12 5.38Z" fill="#EA4335"/>
          </svg>
          Sign in with Google
        </button>

        <!-- Divider -->
        <div class="divider">
          <span class="divider-text">Spirit helps you with</span>
        </div>

        <!-- Features section -->
        <div class="features-section">
          <h3 class="features-title">Spiritual Guidance Features</h3>
          <div class="features-list">
            <div class="feature-item">
              <div class="feature-icon">üí¨</div>
              <span class="feature-text">Personal conversations about faith and life</span>
            </div>
            <div class="feature-item">
              <div class="feature-icon">üìñ</div>
              <span class="feature-text">Guidance based on Jesus's teachings</span>
            </div>
            <div class="feature-item">
              <div class="feature-icon">ü§ù</div>
              <span class="feature-text">Personalized spiritual growth support</span>
            </div>
          </div>
        </div>
      </div>

      <!-- User info (when logged in) -->
      <div id="user-card" class="login-card hidden">
        <div class="user-info-section">
          <div class="avatar">
            <img id="avatar" src="" alt="Avatar" />
          </div>
          <h2 class="welcome-back" id="welcome-text">Welcome back!</h2>
          <p class="user-email" id="user-email"></p>
          <a href="/chat" class="chat-btn">Continue Chatting with Spirit</a>
          <button id="logout-btn" class="logout-btn">Logout</button>
        </div>
      </div>
      </div>
    </div>

    <script define:vars={{PUBLIC_WORKER_API_URL: import.meta.env.PUBLIC_WORKER_API_URL || 'http://localhost:8787'}}>
      // DOM elements
      const loadingEl = document.getElementById('loading');
      const loginCardEl = document.getElementById('login-card');
      const userCardEl = document.getElementById('user-card');
      const googleLoginBtn = document.getElementById('google-login-btn');
      const logoutBtn = document.getElementById('logout-btn');
      const avatarEl = document.getElementById('avatar');
      const welcomeTextEl = document.getElementById('welcome-text');
      const userEmailEl = document.getElementById('user-email');

      // Function to hide element
      function hideElement(el) {
        el.classList.add('hidden');
      }

      // Function to show element
      function showElement(el) {
        el.classList.remove('hidden');
      }

      // Function to check session status
      async function checkSession() {
        try {
          const token = localStorage.getItem('session_token');
          if (!token) {
            // Show login card
            hideElement(loadingEl);
            showElement(loginCardEl);
            hideElement(userCardEl);
            return;
          }

          const response = await fetch(PUBLIC_WORKER_API_URL + '/auth/validate', {
            headers: {
              'Authorization': 'Bearer ' + token
            }
          });

          if (response.ok) {
            const { user } = await response.json();

            // Update user info in UI
            if (user.avatar_url) {
              avatarEl.src = user.avatar_url;
            } else {
              // Show initials if no avatar
              avatarEl.style.display = 'none';
              const parentDiv = avatarEl.parentElement;
              parentDiv.classList.add('avatar');
              parentDiv.textContent = user.name?.charAt(0).toUpperCase() || 'U';
            }

            welcomeTextEl.textContent = `Welcome, ${user.name}!`;
            userEmailEl.textContent = user.email;

            // Show user card
            hideElement(loadingEl);
            hideElement(loginCardEl);
            showElement(userCardEl);
          } else {
            // Session invalid, clear token and show login
            localStorage.removeItem('session_token');
            hideElement(loadingEl);
            showElement(loginCardEl);
            hideElement(userCardEl);
          }
        } catch (error) {
          console.error('Error checking session:', error);
          // On error, show login screen
          localStorage.removeItem('session_token');
          hideElement(loadingEl);
          showElement(loginCardEl);
          hideElement(userCardEl);
        }
      }

      // Function to initiate Google login
      async function initiateGoogleLogin() {
        try {
          console.log('=== Frontend Google OAuth Debug ===');
          console.log('API URL:', PUBLIC_WORKER_API_URL);
          console.log('Requesting OAuth URL from:', PUBLIC_WORKER_API_URL + '/auth/google/url');
          console.log('==================================');

          const response = await fetch(PUBLIC_WORKER_API_URL + '/auth/google/url');
          const { url } = await response.json();

          console.log('Received OAuth URL:', url);

          // Redirect to Google OAuth URL
          window.location.href = url;
        } catch (error) {
          console.error('Error initiating Google login:', error);
        }
      }

      // Function to handle logout
      async function logout() {
        try {
          const token = localStorage.getItem('session_token');
          if (token) {
            await fetch(PUBLIC_WORKER_API_URL + '/auth/logout', {
              method: 'POST',
              headers: {
                'Authorization': 'Bearer ' + token,
                'Content-Type': 'application/json'
              }
            });
          }

          localStorage.removeItem('session_token');
          // Show login card after logout
          hideElement(loadingEl);
          showElement(loginCardEl);
          hideElement(userCardEl);
        } catch (error) {
          console.error('Error logging out:', error);
        }
      }

      // Add event listeners
      googleLoginBtn.addEventListener('click', initiateGoogleLogin);
      logoutBtn.addEventListener('click', logout);

      // Check session on page load
      checkSession();

      // Check for OAuth callback in URL
      if (window.location.search.includes('code=')) {
        const urlParams = new URLSearchParams(window.location.search);
        const code = urlParams.get('code');

        if (code) {
          // Show loading while processing
          showElement(loadingEl);
          hideElement(loginCardEl);
          hideElement(userCardEl);

          // Send code to our backend to exchange for token
          fetch(PUBLIC_WORKER_API_URL + '/auth/google/callback', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ code })
          })
          .then(response => response.json())
          .then(data => {
            if (data.session_token) {
              // Store the session token
              localStorage.setItem('session_token', data.session_token);

              // Redirect to chat page
              window.location.href = '/chat';
            } else {
              console.error('No session token received');
              // Show login screen again
              hideElement(loadingEl);
              showElement(loginCardEl);
              hideElement(userCardEl);
            }
          })
          .catch(error => {
            console.error('Error exchanging code:', error);
            // Show login screen again
            hideElement(loadingEl);
            showElement(loginCardEl);
            hideElement(userCardEl);
          });
        }
      }
    </script>
</Layout>
