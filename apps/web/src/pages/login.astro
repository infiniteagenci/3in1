      if (languageBtn && !languageBtn.contains(e.target) && languageDropdown && !languageDropdown.contains(e.target)) {
        languageDropdown.classList.add('hidden');
        const arrow = languageBtn?.querySelector('.language-arrow') as HTMLElement;
        if (arrow) {
