---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro'
---

<Layout title="3in1 - Your Faith Community, Always With You">
  <slot name="head">
    <meta name="description" content="3in1 - A welcoming Catholic spiritual community where you chat with Spirit, explore sacred texts, pray together, and grow in faith with friends on the same journey." />
  </slot>

  <!-- Allow scrolling on index page -->
  <style is:global>
    /* Hide Google Translate widget completely - Global styles */
    .goog-te-banner-frame, .goog-te-gadget, .skiptranslate, .goog-te-spinner, .goog-te-spinner-pos {
      display: none !important;
      visibility: hidden !important;
      opacity: 0 !important;
      height: 0 !important;
      width: 0 !important;
      position: absolute !important;
      left: -9999px !important;
      top: -9999px !important;
    }

    .goog-te-combo {
      position: absolute !important;
      left: -9999px !important;
      top: -9999px !important;
      opacity: 0 !important;
      pointer-events: none !important;
    }

    body {
      top: 0 !important;
      position: static !important;
    }

    #google_translate_element {
      display: none !important;
    }

    .goog-logo-link {
      display: none !important;
    }

    .goog-te-gadget span {
      display: none !important;
    }

    /* Hide Google Translate iframes */
    iframe[src*="translate.google.com"],
    iframe[src*="google.com/translate"] {
      display: none !important;
      visibility: hidden !important;
      position: absolute !important;
      left: -9999px !important;
    }

    /* Prevent flickering during translation */
    .translated-ltr {
      display: block !important;
    }

    html, body {
      overflow: auto !important;
      height: auto !important;
    }

    /* Hide Google Translate links and footer text */
    a[href*="translate.google.com"] {
      display: none !important;
    }

    .goog-te-gadget > span {
      display: none !important;
    }

    .goog-te-gadget font {
      display: none !important;
    }

    /* Hide any div at the end of body that might be Google Translate */
    body > div:last-child:not([class]):not([id]) {
      display: none !important;
    }

    /* Hide Google Translate banner at top */
    .goog-te-banner {
      display: none !important;
    }

    /* Hide all skiptranslate elements anywhere in the page */
    .skiptranslate, .skiptranslate *, .goog-te-gadget, .goog-te-gadget * {
      display: none !important;
      visibility: hidden !important;
    }

    /* Hide font elements containing Google text */
    font:has(-webkit-any(text)),
    font[size="1"],
    .goog-te-gadget-simple {
      display: none !important;
    }

    /* Custom Animations */
    @keyframes pulse-slow {
      0%, 100% { opacity: 0.6; transform: scale(1); }
      50% { opacity: 0.8; transform: scale(1.05); }
    }

    @keyframes float {
      0%, 100% { transform: translate(-50%, -50%) rotate(0deg); }
      50% { transform: translate(-50%, -50%) rotate(180deg); }
    }

    @keyframes float-slow {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-10px) rotate(5deg); }
    }

    @keyframes fade-in-up {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .animate-pulse-slow { animation: pulse-slow 4s ease-in-out infinite; }
    .animate-float { animation: float 20s linear infinite; }
    .animate-float-slow { animation: float-slow 3s ease-in-out infinite; }
    .animate-fade-in-up { animation: fade-in-up 0.8s ease-out forwards; opacity: 0; }

    /* Background pattern overlay */
    body {
      background-image:
        radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(200, 75, 159, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 40% 80%, rgba(139, 95, 207, 0.03) 0%, transparent 50%);
    }

    /* Decorative crosses pattern */
    .hero-pattern::before {
      content: '';
      position: absolute;
      inset: 0;
      background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Ctext x='50' y='55' text-anchor='middle' font-size='80' fill='rgba(255,255,255,0.03)' font-family='serif'%3E‚úù%3C/text%3E%3C/svg%3E");
      background-repeat: repeat;
      pointer-events: none;
      opacity: 0.4;
    }
  </style>

  <!-- Hero Section with Vibrant Purple Gradient Background (matching login) -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden" style="background: linear-gradient(135deg, #C84B9F 0%, #8B5FCF 50%, #D870B7 100%);">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-br from-purple-300/40 to-violet-300/40 rounded-full blur-3xl animate-pulse-slow"></div>
